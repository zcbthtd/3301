# requesting 24 cores for 3 hours from HPC

#!/bin/bash
#SBATCH -t 3:00:00
#SBATCH -n 24
#SBATCH -p normal

# setting temporary directory, loading QIIME

echo "set temporary directory"
mkdir -p ~/qiime_tmp
export TMPDIR=~/qiime_tmp

echo "load modules and virtual environment"
module load eb
module load Miniconda2
source deactivate
source activate qiime1


core microbiome

2d plots

summarize taxa

